<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mirchandani.schedulingsystem.LoginScreenController">
   <children>
      <HBox alignment="TOP_CENTER" layoutX="198.0" layoutY="134.0" prefHeight="51.0" prefWidth="416.0">
         <children>
            <Label fx:id="welcomeLbl" alignment="CENTER" contentDisplay="CENTER" maxWidth="340.0" prefHeight="50.0" prefWidth="340.0" text="Welcome" textAlignment="CENTER">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <GridPane layoutX="267.0" layoutY="250.0" prefHeight="63.0" prefWidth="251.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="162.0" minWidth="10.0" prefWidth="134.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="197.0" minWidth="10.0" prefWidth="197.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="usernameTxt" GridPane.columnIndex="1" />
            <TextField fx:id="passwordTxt" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="usernameLbl" text="Username:">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </Label>
            <Label fx:id="passwordLbl" text="Password:" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <HBox layoutX="322.0" layoutY="338.0" prefHeight="25.0" prefWidth="157.0">
         <children>
            <Button fx:id="LoginBtn" mnemonicParsing="false" onAction="#onActionLogin" prefHeight="23.0" prefWidth="157.0" text="Login" />
         </children>
      </HBox>
   </children>
</AnchorPane>
