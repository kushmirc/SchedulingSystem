<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mirchandani.schedulingsystem.LoginScreenController">
   <children>
      <HBox layoutX="314.0" layoutY="132.0" prefHeight="53.0" prefWidth="172.0">
         <children>
            <Label contentDisplay="CENTER" prefHeight="47.0" prefWidth="166.0" text="Welcome" textAlignment="CENTER">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <GridPane layoutX="267.0" layoutY="250.0" prefHeight="63.0" prefWidth="251.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="162.0" minWidth="10.0" prefWidth="134.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="197.0" minWidth="10.0" prefWidth="197.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="usernameTxt" GridPane.columnIndex="1" />
            <TextField fx:id="passwordTxt" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Username:">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </Label>
            <Label text="Password:" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <HBox layoutX="322.0" layoutY="338.0" prefHeight="25.0" prefWidth="157.0">
         <children>
            <Button fx:id="LoginBtn" mnemonicParsing="false" onAction="#onActionLogin" prefHeight="23.0" prefWidth="157.0" text="Login" />
         </children>
      </HBox>
   </children>
</AnchorPane>
